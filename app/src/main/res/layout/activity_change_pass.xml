<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.sawa.aqarat.Activities.Login_Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <hu.aut.utillib.circular.widget.CircularFrameLayout
            android:id="@+id/simple_reveal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/circle_shape_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/corner_shape_top" />

                <TextView
                    android:id="@+id/title_act_name"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/change_password_str"
                    android:textColor="@color/white_one"
                    android:textSize="19sp" />

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/left_arrow_icon"
                    android:scaleType="fitXY" />

            </RelativeLayout>

        </hu.aut.utillib.circular.widget.CircularFrameLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/password_icon" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_old_pass"
            style="@style/editText_shape_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:hint="@string/old_password_str"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/purple_color"
            android:textColorHint="@color/purple_light_color" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/password_icon" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_new_password"
            style="@style/editText_shape_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:hint="@string/new_password_str"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/purple_color"
            android:textColorHint="@color/purple_light_color" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/password_icon" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_Confirm_password"
            style="@style/editText_shape_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:hint="@string/confirm_password_str"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/purple_color"
            android:textColorHint="@color/purple_light_color" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center">


        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_purple"
            android:minHeight="35dp"
            android:minWidth="150dp"
            android:text="@string/confirm_str"
            android:textAllCaps="false"
            android:textColor="@color/white_one"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edittext_circle_img"
            android:minHeight="35dp"
            android:minWidth="150dp"
            android:text="@string/cancel_str"
            android:textAllCaps="false"
            android:textColor="@color/purple_color"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">


        <hu.aut.utillib.circular.widget.CircularFrameLayout
            android:id="@+id/simple_reveal_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/circle_shape_lay_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:background="@drawable/corner_shape_bottom" />

            </RelativeLayout>

        </hu.aut.utillib.circular.widget.CircularFrameLayout>

    </RelativeLayout>

</LinearLayout>
